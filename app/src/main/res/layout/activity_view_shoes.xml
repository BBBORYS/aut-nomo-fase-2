<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4DFFEB3B"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Primer Zapato -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/shoeName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Nombre del Zapato 1" />

        <TextView
            android:id="@+id/shoeDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:text="Descripción" />

        <EditText
            android:id="@+id/editableField11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 1"
            android:inputType="text"
            android:text="marca" />

        <EditText
            android:id="@+id/editableField21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 2"
            android:inputType="text"
            android:text="Valor" />

        <EditText
            android:id="@+id/editableField31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 3"
            android:inputType="text"
            android:text="color" />

        <ImageView
            android:id="@+id/shoeImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/sample_image"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ver" />

    </LinearLayout>

    <!-- Segundo Zapato -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/shoeName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Nombre del Zapato 2" />

        <TextView
            android:id="@+id/shoeDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:text="Descripción del Zapato 2" />

        <EditText
            android:id="@+id/editableField12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 1"
            android:inputType="text"
            android:text="marca" />

        <EditText
            android:id="@+id/editableField22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 2"
            android:inputType="text"
            android:text="Valor" />

        <EditText
            android:id="@+id/editableField32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Campo editable 3"
            android:inputType="text"
            android:text="color" />

        <ImageView
            android:id="@+id/shoeImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/sample_image"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ver" />

    </LinearLayout>

</LinearLayout>
